@model HomeViewModel
@{
    ViewData["Title"] = "Questions";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="mt-3 mb-3">
    <h3>Delivery Query</h3>
</div>

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="mb-3">
        <label class="form-label">Please enter your first name</label>
        <div>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Please enter your last name</label>
        <div>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Please enter the date that you placed your order in the format MM-DD-YYYY</label>
        <div>
            <input asp-for="OrderDate" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Please enter how many business days it will take to ship your order</label>
        <div>
            <input asp-for="DaysToShip" class="form-control" />
            <span asp-validation-for="DaysToShip" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
